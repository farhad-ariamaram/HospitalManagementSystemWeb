@model List<HospitalManagementSystem.Models.Domain.Bill>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12 text-right">
                <h2>لیست قبض ها&nbsp;</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @Html.AntiForgeryToken()
                <table class="table" id="myTable">
                    <tr>
                        <th></th>
                        <th>
                            پذیرش
                        </th>
                        <th>
                            بیمار
                        </th>
                        <th>
                            مبلغ
                        </th>
                        <th>
                            شماره قبض
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("پرداخت", "PayBillConfirm", new { id = item.Id }, new { @class = "btn btn-danger opbtn", onclick = "return confirm('مطمئن هستید?');" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Receptionist.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Patient.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillNo)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <br />
                <div class="row">
                    <div class="col-sm-6">
                        <a href="/Receptionist/Index"><img class="back" src="~/Content/images/back3.png" /></a>
                    </div>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>
