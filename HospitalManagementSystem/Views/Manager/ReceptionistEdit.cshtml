@model HospitalManagementSystem.Models.Domain.Receptionist

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-12 text-right"><h2>ویرایش پذیرش</h2></div>

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <table class="table" id="myTable">
                <tr>
                    <th></th>
                    <th>
                        نام
                    </th>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="ذخیره" class="btn btn-primary" />
                        <a href="/Manager/Receptionist"><input type="button" value="انصراف" class="btn btn-default" /></a>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        }
    </div>
</div>

<br />
<div class="row">
    <div class="col-sm-6">
        <a href="/Manager/Receptionist"><img class="back" src="~/Content/images/back3.png" /></a>
    </div>
</div>
<br />

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


